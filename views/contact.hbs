<h2>Contact me</h2>

{{#if isSent}}
<div class="isSent">
  <h4>The message has been sent!</h4>
</div>
{{/if}}

{{#if isError}}
<div class="isError">
  <h4>
    The message has not been sent, try again leds <br>
    Fill all the fields
  </h4>
</div>
{{/if}}

<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="uploadFile" accept=".png, .jpg, .jpeg .gif">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>